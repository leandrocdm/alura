public class Conta {
	
	double saldo;
	int agencia;
	int numero;
	String titular;
	char codigo;
	
	public void deposita(double valor) {
		this.saldo += valor;
	}
	
	public boolean saca(double valor) {
		if(this.saldo < valor) {
			return false;
		}else {
			this.saldo -= valor;
			return true;
		}
	}
	
	public boolean transfere(double valor, Conta destino) {
		if(this.saldo < valor) {
			return false;
		}else {
			this.saldo -= valor;
			destino.saldo += valor;
			return true;
		}
	}
}
